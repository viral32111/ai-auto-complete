{
	"include": [
		"./source/server/**/*"
	],
	"compilerOptions": {
		"rootDir": "./source/server/",
		"outDir": "./dist/",
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	}
}
